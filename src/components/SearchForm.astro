import React, { useState } from 'react';

export default function SearchForm({ onSearch }) {
  const [searchQuery, setSearchQuery] = useState('');

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!searchQuery.trim()) return;
    onSearch(searchQuery.trim());
  };

  return (
    <form onSubmit={handleSubmit} className="flex gap-2 max-w-md mx-auto">
      <input
        type="text"
        value={searchQuery}
        onChange={e => setSearchQuery(e.target.value)}
        placeholder="Введите продукт"
        className="flex-grow p-3 rounded border border-purple-600 bg-purple-900 text-white placeholder-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
      />
      <button
        type="submit"
        className="px-4 py-3 bg-pink-600 hover:bg-pink-700 rounded text-white font-semibold transition"
      >
        Найти
      </button>
    </form>
  );
}
