---
// src/pages/thank-you.astro
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thank You — UKSaver</title>
  </head>
  <body class="bg-gradient-to-br from-indigo-800 via-purple-800 to-pink-800 min-h-screen flex items-center justify-center text-white px-4">
    <div class="bg-white/10 backdrop-blur-md p-8 rounded-xl max-w-md text-center space-y-4">
      <h1 class="text-3xl font-bold text-white">Thank you!</h1>
      <p class="text-white/80">Your email has been successfully submitted.</p>
      <a
        href="/"
        class="inline-block mt-4 text-purple-200 hover:text-white font-semibold underline transition"
      >
        ← Back to homepage
      </a>
    </div>
  </body>
</html>
